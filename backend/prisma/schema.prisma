// Config
datasource db {
  provider = "sqlite"
  url      = "file:./todolist.db"
}

generator client {
  provider = "prisma-client-js"
  // previewFeatures = []
}

// Enums
enum CategoryName {
  TRAVAIL
  PERSONNEL
  SHOPPING
  AUTRE
}

enum TodoPriority {
  HAUT
  MOYEN
  BAS
}

// Models

/// -------------------------
///       Users
/// -------------------------
model User {
  id         Int      @id @default(autoincrement())
  firstName  String
  lastName   String
  profileUrl String
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Todo       Todo[]
}

/// -------------------------
///       Todos
/// -------------------------
model Todo {
  id            Int          @id @default(autoincrement())
  title         String
  content       String
  priority      TodoPriority
  executionDate DateTime?
  category      CategoryName
  userId        Int
  user          User         @relation(fields: [userId], references: [id])
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
}
